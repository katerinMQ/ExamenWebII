
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <br /><br />


        @using (Html.BeginForm("calcular", "Ejercicio1", FormMethod.Post))
        {
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Edad</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="edad" name="edad" required value="">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Precio entrada</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="precio" required name="precio">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Dia</label>
                <div class="col-sm-10">
                    <select id="cbodias" name="cbodias">
                        <option value="value">sin enalzar</option>
                        <option value="Lunes">Lunes</option>
                        <option value="Martes">Martes</option>
                        <option value="Miercoles">Miercoles</option>
                        <option value="Jueves">Jueves</option>
                        <option value="Viernes">Viernes</option>
                        <option value="Sabado">Sabado</option>
                        <option value="Domingo">Domingo</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <button type="submit" name="btncomprar">Comprar</button>

            </div><br />
            <div class="col-sm-10">
                <label class=""> Precio @ViewBag.Precio</label> <br />
                <label class=""> edad @ViewBag.edad</label> <br />
                <label class=""> dia @ViewBag.dia</label> <br />
                <label class=""> Decuento @ViewBag.desceunto</label> <br />
                <label class=""> Total aPagar @ViewBag.total</label> <br />

            </div>
        }

    </div>
</body>
</html>
